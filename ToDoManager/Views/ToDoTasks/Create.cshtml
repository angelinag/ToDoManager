@model ToDoManager.ViewModels.ToDoTasks.CreateVM

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/SiteMaster.cshtml";
}

<form action="/ToDoTasks/Create" method="post">
    <div class="grid">
        @Html.HiddenFor(m => m.ParentListId)
        <div class="grid-row">
            <div class="grid-column">
                @Html.LabelFor(m => m.Description)
            </div>
            <div class="grid-column-triple">
                @Html.TextAreaFor(m => m.Description)
                @Html.ValidationMessageFor(m => m.Description, null, new { style = "color: red;" })
            </div>
        </div>
        <div class="grid-row">
            <div class="grid-column">
                @Html.LabelFor(m => m.IsDone)
            </div>
            <div class="grid-column">
                @Html.CheckBoxFor(m => m.IsDone)
                @Html.ValidationMessageFor(m => m.IsDone, null, new { style = "color: red;" })
            </div>
        </div>
        <div class="grid-row">
            <div class="grid-column">
                <input type="submit" value="Save" />
                <a href="/ToDoTasks/Index?id=@Model.ParentListId">Cancel</a>
            </div>
        </div>
    </div>
</form>

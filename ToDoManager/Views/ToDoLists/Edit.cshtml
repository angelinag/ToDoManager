@model ToDoManager.ViewModels.ToDoLists.EditVM

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/SiteMaster.cshtml";
}

<form action="/ToDoLists/Edit" method="post">
    @Html.HiddenFor(m => m.Id)
    <div class="grid">
        <div class="grid-row">
            <div class="grid-column">
                @Html.LabelFor(m => m.Title)
            </div>
            <div class="grid-column-triple">
                @Html.TextBoxFor(m => m.Title)
                @Html.ValidationMessageFor(m => m.Title, null, new { style = "color: red;" })
            </div>
        </div>
        <div class="grid-row">
            <div class="grid-column">
                @Html.LabelFor(m => m.Description)
            </div>
            <div class="grid-column-triple">
                @Html.TextAreaFor(m => m.Description)
                @Html.ValidationMessageFor(m => m.Description, null, new { style = "color: red;" })
            </div>
        </div>
        <div class="grid-row">
            <div class="grid-column">
                <input type="submit" value="Save" />
                <a href="/Users/Index">Cancel</a>
            </div>
        </div>
    </div>
</form>

